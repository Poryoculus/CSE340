
        <div class="container">
            <h1><%= title %></h1>

            <% if (typeof messages !== 'undefined' && messages.notice) { %>
                <div class="alert alert-info">
                    <%= messages.notice %>
                </div>
            <% } %>

            <% if (errors && errors.length > 0) { %>
                <div class="alert alert-danger">
                    <ul>
                        <% errors.forEach(function(error) { %>
                            <li><%= error.msg %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>

            <form id="updateForm" action="/inv/update" method="POST">
                <input type="hidden" name="inv_id" value="<%= inv_id %>">

                <div class="form-group">
                    <label for="classification_id">Classification</label>
                    <%- classificationSelect %>
                </div>

                <div class="form-group">
                    <label for="inv_make">Make</label>
                    <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>" required class="form-control">
                </div>

                <div class="form-group">
                    <label for="inv_model">Model</label>
                    <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>" required class="form-control">
                </div>

                <div class="form-group">
                    <label for="inv_year">Year</label>
                    <input type="number" id="inv_year" name="inv_year" value="<%= inv_year %>" required class="form-control">
                </div>

                <div class="form-group">
                    <label for="inv_description">Description</label>
                    <textarea id="inv_description" name="inv_description" class="form-control"><%= inv_description %></textarea>
                </div>

                <div class="form-group">
                    <label for="inv_image">Image Path</label>
                    <input type="text" id="inv_image" name="inv_image" value="<%= inv_image %>" class="form-control">
                </div>

                <div class="form-group">
                    <label for="inv_thumbnail">Thumbnail Path</label>
                    <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= inv_thumbnail %>" class="form-control">
                </div>

                <div class="form-group">
                    <label for="inv_price">Price</label>
                    <input type="number" id="inv_price" name="inv_price" value="<%= inv_price %>" required class="form-control">
                </div>

                <div class="form-group">
                    <label for="inv_miles">Miles</label>
                    <input type="number" id="inv_miles" name="inv_miles" value="<%= inv_miles %>" class="form-control">
                </div>

                <div class="form-group">
                    <label for="inv_color">Color</label>
                    <input type="text" id="inv_color" name="inv_color" value="<%= inv_color %>" class="form-control">
                </div>

                <button type="submit" name="submit" class="btn btn-primary">Update Vehicle</button>
            </form>
        </div>
