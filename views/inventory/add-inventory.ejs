
<h1>Add Inventory Item</h1>

<% if (errors && errors.length > 0) { %>
  <div class="error-messages">
    <h2>Please fix the following errors:</h2>
    <ul>
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }); %>
    </ul>
  </div>
<% } %>

<form id="add-inventory-form" action="/inv/add-inventory" method="POST">
  <!-- Classification select (util returns <select> with selected option if present) -->
  <label for="classificationList">Classification</label>
  <%- classificationList %>

  <label for="inv_make">Make</label>
  <input id="inv_make" name="inv_make" type="text" required
         value="<%= formData.inv_make || '' %>">

  <label for="inv_model">Model</label>
  <input id="inv_model" name="inv_model" type="text" required
         value="<%= formData.inv_model || '' %>">

  <label for="inv_year">Year</label>
  <input id="inv_year" name="inv_year" type="number" required min="1886" max="<%= new Date().getFullYear() + 1 %>"
         value="<%= formData.inv_year || '' %>">

  <label for="inv_price">Price</label>
  <input id="inv_price" name="inv_price" type="number" step="0.01" required min="0"
         value="<%= formData.inv_price || '' %>">

  <label for="inv_miles">Miles</label>
  <input id="inv_miles" name="inv_miles" type="number" min="0"
         value="<%= formData.inv_miles || '' %>">

  <label for="inv_description">Description</label>
  <textarea id="inv_description" name="inv_description" rows="4"><%= formData.inv_description || '' %></textarea>

  <label for="inv_image">Image Path</label>
  <input id="inv_image" name="inv_image" type="text"
         value="<%= formData.inv_image || '/images/vehicles/no-image.png' %>">

  <label for="inv_thumbnail">Thumbnail Path</label>
  <input id="inv_thumbnail" name="inv_thumbnail" type="text"
         value="<%= formData.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>">

  <label for="inv_color">Color</label>
  <input type="text"
    id="inv_color"
    name="inv_color"
    value="<%= formData.inv_color || '' %>"
    required
    pattern="^[A-Za-z0-9 ]+$"
    title="Letters, numbers, and spaces only">

  <button type="submit">Add Vehicle</button>
</form>

