<header>
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (locals.loggedin) { %>
      <!-- Greeting link visible only when logged in -->
      <a href="/account/management" title="Go to your account">Welcome <%= accountData.firstname %></a>

      <!-- Logout link -->
      <a href="/account/logout" title="Click to log out">Logout</a>
    <% } else { %>
      <!-- Shown only if not logged in -->
      <a href="/account/login" title="Click to log in">My Account</a>
    <% } %>
  </div>
</header>